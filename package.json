{
  "name": "xrpl-accountlib",
  "version": "3.1.0",
  "description": "XRPL Account helper: generation, derivation and signing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run test && npm run build",
    "clean": "rm -rf dist",
    "build": "tsc",
    "test": "jest --verbose",
    "browserify": "browserify -r ./dist/index.js:xrpl-accountlib -o dist/browser.js && npm run minify",
    "minify": "cat dist/browser.js | terser --compress --mangle > dist/browser.min.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts"
  ],
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@xrplf/isomorphic": "1.0.0-beta.1",
    "@xrplf/secret-numbers": "^1.0.0-beta.1",
    "@noble/hashes": "1.3.2",
    "@noble/curves": "1.2.0",
    "@scure/bip32": "1.3.2",
    "@scure/bip39": "1.2.1",
    "assert": "^2.0.0",
    "bignumber.js": "9.1.2",
    "elliptic": "6.5.4",
    "ripple-address-codec": "5.0.0-beta.1",
    "ripple-binary-codec": "2.0.0-beta.1",
    "ripple-keypairs": "^2.0.0-beta.1",
    "ripple-secret-codec": "^1.0.3",
    "xrpl-client": "^2.1.0",
    "xrpl-sign-keypairs": "^2.3.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.19",
    "@types/babel__traverse": "^7.17.1",
    "@types/bip39": "^3.0.0",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.5.2",
    "@types/lodash": "^4.14.191",
    "@types/node": "^14.18.35",
    "@types/prettier": "2.4",
    "browserify": "^17.0.0",
    "jest": "^29.7.0",
    "terser": "^5.16.6",
    "ts-jest": "^29.1.1",
    "typescript": "4.5"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/WietseWind/xrpl-accountlib.git"
  },
  "bugs": {
    "url": "https://github.com/WietseWind/xrpl-accountlib/issues"
  },
  "homepage": "https://github.com/WietseWind/xrpl-accountlib#readme",
  "license": "MIT",
  "readmeFilename": "README.md",
  "keywords": [
    "xrp",
    "xrpl-ledger",
    "multi sign",
    "sign"
  ]
}
